<UserControl x:Name="controlKillsCounter" x:Class="ShootingRange.classes.Interface.KillsCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShootingRange.classes.Interface"
             mc:Ignorable="d"
             FontSize="48"
             FontFamily="./Art/#Futura-Normal"
             Height="85"
             Foreground="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lblKillsCount"
               Content="23"
               Grid.Column="1"
               FontSize="96"
               HorizontalAlignment="Left"
               HorizontalContentAlignment="Center"
               VerticalAlignment="Center"
               Width="115"
               Padding="0"
               Foreground="{Binding Foreground, ElementName=controlKillsCounter}"/>

        <Image Grid.Column="0"
               HorizontalAlignment="Right"
               Width="80"
               Height="85"
               Margin="0, 0, 15, 0"
               Source="Art/TargetKill.png"/>

    </Grid>
</UserControl>
